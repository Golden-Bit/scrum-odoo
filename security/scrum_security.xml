<!-- file: project_scrum/security/scrum_security.xml -->
<odoo>
    <!--  Usa la categoria “Project Management” già presente in Odoo
          (xml-id: base.module_category_project_management)               -->
    <record id="group_scrum_product_owner" model="res.groups">
        <field name="name">Product Owner</field>
        <field name="category_id" ref="base.module_category_project_management"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_scrum_scrum_master" model="res.groups">
        <field name="name">Scrum Master</field>
        <field name="category_id" ref="base.module_category_project_management"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_scrum_developer" model="res.groups">
        <field name="name">Developer</field>
        <field name="category_id" ref="base.module_category_project_management"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>
</odoo>
