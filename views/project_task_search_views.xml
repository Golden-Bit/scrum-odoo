<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="view_task_search_inherit_sprint" model="ir.ui.view">
    <field name="name">project.task.search.inherit.sprint</field>
    <field name="model">project.task</field>
    <field name="inherit_id" ref="project.view_task_search_form_base"/>
    <field name="arch" type="xml">
      <!-- 1) Inserisco un filtro rapido per Sprint -->
      <xpath expr="//search" position="inside">
        <filter string="Sprint" name="filter_sprint"
                domain="[('sprint_id','=',self)]"/>
      </xpath>
      <!-- 2) Aggiungo “Sprint” nel menu Group By -->
      <xpath expr="//group[@string='Group By']" position="inside">
        <filter string="Sprint" name="groupby_sprint"
                context="{'group_by':'sprint_id'}"/>
      </xpath>
    </field>
  </record>
</odoo>
