<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="view_task_search_inherit_sprint" model="ir.ui.view">
    <field name="name">project.task.search.inherit.sprint</field>
    <field name="model">project.task</field>
    <!-- 1) Ereditiamo la vista di ricerca esistente -->
    <field name="inherit_id" ref="project.view_task_search"/>
    <field name="arch" type="xml">
      <!-- 2) Usiamo @name per individuare il punto di inserimento -->
      <xpath expr="//filter[@name='my_tasks']" position="after">
        <!-- 3) Aggiungiamo il filtro per sprint_id -->
        <filter
          name="filter_by_sprint"
          string="Sprint"
          domain="[('sprint_id','=', context.get('search_default_sprint_id'))]"
          context="{'search_default_sprint_id': active_id}"
        />
      </xpath>
    </field>
  </record>
</odoo>
