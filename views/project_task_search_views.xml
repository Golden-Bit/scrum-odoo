<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="view_task_search_inherit_sprint" model="ir.ui.view">
    <field name="name">project.task.search.inherit.sprint</field>
    <field name="model">project.task</field>
    <!-- 1) Ereditare la search view esatta -->
    <field name="inherit_id" ref="project.view_task_search_form_project_base"/>
    <field name="arch" type="xml">
      <!-- 2) Posizioniamo il filtro subito dopo gli altri filtri standard -->
      <xpath expr="//filter[@name='filter_my_tasks']" position="after">
        <filter name="filter_by_sprint"
                string="Sprint"
                domain="[('sprint_id','=', self)]"/>
      </xpath>
    </field>
  </record>
</odoo>
