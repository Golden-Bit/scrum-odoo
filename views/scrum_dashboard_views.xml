<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="view_scrum_dashboard" model="ir.ui.view">
    <field name="name">scrum.sprint.dashboard</field>
    <field name="model">scrum.sprint</field>
    <field name="type">dashboard</field>            <!-- must match your root tag -->
    <field name="arch" type="xml">
      <dashboard>
        <group>
          <widget name="graph"
                  type="bar"
                  model="scrum.sprint"
                  title="Velocity per Sprint"
                  measure="velocity"
                  group_by="name"/>
        </group>
        <group>
          <widget name="graph"
                  type="line"
                  model="scrum.burndown.line"
                  title="Burndown Sprint"
                  domain="[('sprint_id','=', active_id)]"
                  measure="remaining_points"
                  group_by="date"/>
        </group>
        <group>
          <widget name="graph"
                  type="pie"
                  model="scrum.user.story"
                  title="Stato User Stories"
                  domain="[('sprint_id','=', active_id)]"
                  measure="__count__"
                  group_by="state"/>
        </group>
      </dashboard>
    </field>
  </record>
</odoo>
