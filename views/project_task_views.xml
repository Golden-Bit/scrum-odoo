<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="view_task_form_inherit_scrum" model="ir.ui.view">
    <field name="name">project.task.form.scrum</field>
    <field name="model">project.task</field>
    <field name="inherit_id" ref="project.view_task_form2"/>
    <field name="arch" type="xml">
      <xpath expr="//sheet" position="inside">
        <group>
          <!-- campo Story Points visibile solo se project_type = 'scrum' -->
          <field name="story_points"
                 modifiers="{'invisible': [['project_type','!=','scrum']]}"/>
          <!-- campo Sprint visibile solo se project_type = 'scrum' -->
          <field name="sprint_id"
                 modifiers="{'invisible': [['project_type','!=','scrum']]}"/>
        </group>
      </xpath>
    </field>
  </record>
</odoo>