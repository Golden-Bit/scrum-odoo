<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="view_task_form_inherit_scrum" model="ir.ui.view">
    <field name="name">project.task.form.scrum</field>
    <field name="model">project.task</field>
    <!-- Ereditare la vista form standard dei Task -->
    <field name="inherit_id" ref="project.task.form"/>
    <field name="arch" type="xml">
      <xpath expr="//sheet" position="inside">
        <group>
          <field name="story_points"
                 attrs="{'invisible': [('project_type','!=','scrum')]}"
                 class="o_td_label"/>
          <field name="sprint_id"
                 attrs="{'invisible': [('project_type','!=','scrum')]}"/>
        </group>
      </xpath>
    </field>
  </record>
</odoo>