<!-- file: project_scrum/views/scrum_story_views.xml -->
<odoo>
<record id="view_scrum_story_kanban" model="ir.ui.view">
    <field name="name">scrum.user.story.kanban</field>
    <field name="model">scrum.user.story</field>
    <field name="arch" type="xml">
        <kanban>
            <templates>
                <t t-name="kanban-box">
                    <div class="oe_kanban_card">
                        <div class="oe_kanban_details">
                            <strong><field name="name"/></strong>
                            <div><field name="description"/></div>
                        </div>
                        <div class="oe_kanban_footer">
                            <!-- Mostra story points come badge -->
                            <span class="badge badge-info o_field_number">
                                <field name="story_points"/>
                            </span>
                        </div>
                    </div>
                </t>
            </templates>
        </kanban>
    </field>
</record>
</odoo>