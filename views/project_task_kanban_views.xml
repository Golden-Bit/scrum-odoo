<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="view_task_kanban_inherit_scrum" model="ir.ui.view">
    <field name="name">project.task.kanban.scrum</field>
    <field name="model">project.task</field>
    <!-- Ereditare la vista Kanban standard dei Task -->
    <field name="inherit_id" ref="project.view_task_kanban"/>
    <field name="arch" type="xml">
      <!-- Inseriamo story_points allâ€™inizio del footer -->
      <xpath expr="//article/footer" position="inside">
        <!-- Wrapper per allineamento a destra -->
        <div class="ms-auto">
          <field name="story_points"
                 modifiers="{'invisible': [['project_type','!=','scrum']]}"/>
        </div>
      </xpath>
    </field>
  </record>
</odoo>
