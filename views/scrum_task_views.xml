<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="view_scrum_task_gantt" model="ir.ui.view">
    <field name="name">project.task.scrum.gantt</field>
    <field name="model">project.task</field>
    <field name="arch" type="xml">
      <gantt string="Scheduling per User Story"
             date_start="date_start"
             date_stop="date_deadline"
             progress="progress"
             default_group_by="story_id"/>
    </field>
  </record>
</odoo>
