<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="view_scrum_sprint_kanban" model="ir.ui.view">
    <field name="name">scrum.sprint.kanban</field>
    <field name="model">scrum.sprint</field>
    <field name="type">kanban</field>
    <field name="arch" type="xml">
      <kanban>
        <templates>
          <t t-name="kanban-box">
            <div class="oe_kanban_card">
              <div class="oe_kanban_header">
                <strong><field name="name"/></strong>
              </div>
              <div class="oe_kanban_body">
                <span class="badge badge-secondary">
                  Stories: <t t-esc="record.story_ids.raw_value and len(record.story_ids.raw_value) or 0"/>
                </span>
              </div>
              <div class="oe_kanban_footer">
                Stato: <t t-esc="record.state.raw_value"/>
              </div>
            </div>
          </t>
        </templates>
      </kanban>
    </field>
  </record>
</odoo>
